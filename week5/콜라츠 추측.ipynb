    "def solution(num):\n",
    "    answer = 0\n",
    "    while num != 1:\n",
    "        if answer >= 500:\n",
    "            answer = -1\n",
    "            break\n",
    "        if num % 2 == 0:\n",
    "            num = num / 2\n",
    "        else:\n",
    "            num = num*3 + 1\n",
    "        answer += 1\n",
    "            \n",
    "    return answer"
